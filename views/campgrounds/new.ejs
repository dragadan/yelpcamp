<% include ../partials/header %>

<div class="container">
  <h2 class="text-center mx-auto">Create a new campground</h2>
  <div class="row">
    <div class="col-md-4 offset-md-4 border border-primary rounded p-2 ">
      <form action="/campgrounds" method="POST">
        <div class="form-group">
          <label for="nameInput">Name</label>
          <input type="text" class="form-control" name="name" id="nameInput" placeholder="name">
        </div>
        <div class="form-group">
          <label for="nameInput">Image</label>
          <input type="text" class="form-control" name="image" id="nameInput" placeholder="Image URL">
        </div>
        <div class="form-group">
          <label for="descriptionInput">Description</label>
          <textarea class="form-control" name="description" id="descriptionInput" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Add campground</button>
      </form>
    </div>

  </div>
</div>



