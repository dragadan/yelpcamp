<% include ../partials/header %>

<div class="container">
  <h2 class="text-center mx-auto">Edit <%= campground.name %></h2>
  <div class="row">
    <div class="col-md-4 offset-md-4 border border-primary rounded p-2 ">
      <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <label for="nameInput">Name</label>
          <input type="text" class="form-control" name="campground[name]" id="nameInput" value="<%= campground.name %>">
        </div>
        <div class="form-group">
          <label for="nameInput">Image</label>
          <input type="text" class="form-control" name="campground[image]" id="nameInput" value="<%= campground.image %>">
        </div>
        <div class="form-group">
          <label for="descriptionInput">Description</label>
          <textarea class="form-control" name="campground[description]" id="descriptionInput" rows="3"><%= campground.description %></textarea>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Submit changes</button>
      </form>
    </div>
  </div>
</div>



<% include ../partials/footer %>
