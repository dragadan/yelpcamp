<% include partials/header %>

<div class="container">
  <h2 class="text-center mx-auto">Login</h2>
  <div class="row">
    <div class="col-md-4 offset-md-4 border border-primary rounded p-2 ">
      <form action="/login" method="POST">
        <div class="form-group">
          <label for="userNameInput">Username</label>
          <input type="text" class="form-control" name="username" id="userNameInput" placeholder="Username">
        </div>
        <div class="form-group">
          <label for="passwordInput">Password</label>
          <input type="password" class="form-control" name="password" id="passwordInput" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-primary btn-block"><i class="fa fa-sign-in" aria-hidden="true"></i> Login</button>
      </form>
    </div>
  </div>
</div>

<% include partials/footer %>
